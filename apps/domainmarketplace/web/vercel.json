{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && pnpm turbo build --filter=web",
  "framework": "nextjs",
  "installCommand": "cd ../.. && pnpm install",
  "crons": [
    {
      "path": "/api/cron/aggregator",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/usage-reporter",
      "schedule": "0 2 * * *"
    }
  ]
}

